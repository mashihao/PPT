<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.PPT"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".view.ButtonActivity"/>
        <activity android:name=".view.EditTextActivity"/>
        <activity android:name=".view.ImageViewActivity"/>
        <activity android:name=".view.TextViewActivity"/>

        <activity android:name=".viewgroup.ScrollViewActivity"/>
        <activity android:name=".viewgroup.LinearLayoutActivity"/>
        <activity android:name=".viewgroup.RelativeLayoutActivity"/>
        <activity android:name=".viewgroup.CardViewActivity"/>
    </application>

</manifest>